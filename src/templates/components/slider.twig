<div class="block sliderBlock" uk-slider="finite: true">
    <div class="row" >
        <div class="col xs-12 md-7">
            {% include "modules/blockHeading.twig" with { "__scope": __scope.title } %}
        </div>
        <div class="col xs-12 md-5 md-end xs-top">
            <div class="sliderBlock__rightHeader">
                <div class="sliderBlock__rightHeaderItem">
                    <a class="link link_bold" href="{{ __scope.link.url }}">{{ __scope.link.text }}</a>
                </div>
                <div class="arrows arrows_dark sliderBlock__rightHeaderItem">
                    <svg class="arrows__arrow" uk-slider-item="previous" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" width="512px" height="512px" viewBox="0 0 306 306" style="enable-background:new 0 0 306 306;" xml:space="preserve">
                        <g>
                            <g id="chevron-right">
                                <polygon points="94.35,0 58.65,35.7 175.95,153 58.65,270.3 94.35,306 247.35,153">
                            </g>
                        </g>
                    </svg>
                    <svg class="arrows__arrow" uk-slider-item="next" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" width="512px" height="512px" viewBox="0 0 306 306" style="enable-background:new 0 0 306 306;" xml:space="preserve">
                        <g>
                            <g id="chevron-right">
                                <polygon points="94.35,0 58.65,35.7 175.95,153 58.65,270.3 94.35,306 247.35,153">
                            </g>
                        </g>
                    </svg>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {% include "components/" ~ __scope.template ~ ".twig" with { "__scope": __scope } %}
    </div>
</div>