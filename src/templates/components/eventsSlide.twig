{% set _col = 'xs-12 md-6 lg-3' %}
{% if __scope.columns is defined %}
    {% set _col = 'xs-12 ' ~ __scope.columns.sm ~ ' ' ~ __scope.columns.md ~ ' ' ~  __scope.columns.lg %}
{% endif %}

{% set imgType = '' %}
{% if __scope.type is defined %}
    {% set imgType = 'imgCard__image_big' %}
{% endif %}


{% 
    set 
    val_1,
    val_2,
    val_3 =
    'uk-slider-container',
    'uk-slider-items',
    ''
%}
{% if __var == 'notSlider' %}
    {% 
        set 
        val_1,
        val_2,
        val_3 =
        '',
        '',
        'row'
    %}
{% endif %}


{% set slides = __scope.slides %}
{% if __scope.slides.slides is defined %}
    {% set slides = __scope.slides.slides %}
{% endif %}

<div class="row {{ val_1 }}">
    <ul class="col xs-12 {{ val_2 }} {{ val_3 }}">
        {% for slide in slides %}
            <li class="col {{ _col }}">
                <div class="imgCard">
                    {% if slide.link is defined %}
                        <a href="{{ slide.link }}" class="imgCard__image {{ imgType }}" style="background-image: url({{ slide.img }})"> 
                        </a>
                        <span class="imgCard__title">
                            <a class="link link_icon link_up link_bold" href="{{ slide.link }}">
                                {{ slide.text.main }} 
                            </a>
                        </span>
                    {% else %}
                        <div class="imgCard__image imgCard__image_noHovered {{ imgType }}" style="background-image: url({{ slide.img }})"></div>
                        <span class="imgCard__title">
                            <span class="label">
                                {{ slide.text.main }}
                            </span>
                        </span>
                    {% endif %}
                    <div class="imgCard__caption">
                        {{ slide.text.sub }}
                    </div>
                </div>    
            </li>
        {% endfor %}
    </ul>
</div>